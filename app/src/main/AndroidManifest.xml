<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bmicalculate.weightscoremonitor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BMICalculator">
        <activity
            android:name="com.bmicalculate.weightscoremonitor.ExitActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.bmicalculate.weightscoremonitor.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bmicalculate.weightscoremonitor.bmiactivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bmicalculate.weightscoremonitor.splash"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>